<div class="auth-page">
  <div class="min-vh-100 d-flex flex-column justify-content-center align-items-center mt-4">
    <div class="col-lg-4">
      <div class="card">
        <div class="card-body p-4">
          <h2 class="card-title text-center mt-8 fw-bold">Forgot your password?</h2>
          <div>
            <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
              <%= f.error_notification %>

              <div class="form-inputs">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email", class: "form-control" } %>
              </div>

              <div class="form-actions button w-100">
                <%= f.button :submit, "Password Reset", class: "fw-bold text-white" %>
              </div>
            <% end %>
            <div class="mt-1">
              <%= render "devise/shared/links" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<img src="https://res.cloudinary.com/dtyuldook/image/upload/v1748362566/HomeBG_mrqikg.png" class="home-bg" id="home-bg">
</div>
