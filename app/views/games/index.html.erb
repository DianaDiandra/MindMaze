      <div class="game-cards">
        <% @games.each do |game| %>
          <div class="game-card-category", style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= game.image_url %>'); background-size: cover; background-position: center; height: 300px; position: relative;">
