<div class="container py-5">
  <h2 class="text-center text-primary mb-4">ðŸ“Š Sleep vs. Game Progress</h2>
  <p class="text-center text-muted mb-4">
    See how your sleep duration impacts your game performance.
  </p>
<%= line_chart [["June 1", 80], ["June 2", 90]] %>

  <% if @sleep_distribution.present? %>
    <%= column_chart @sleep_distribution.sort.to_h, library: {
      title: { text: "Average Accuracy per Sleep Hour", style: { fontSize: '18px' } },
      xAxis: {
        title: { text: "Sleep Hours", style: { fontSize: '14px' } },
        labels: { style: { fontSize: '12px' } }
      },
      yAxis: {
        title: { text: "Avg Accuracy (%)", style: { fontSize: '14px' } },
        labels: { style: { fontSize: '12px' } }
      },
      colors: ["#27ae60"],
      tooltip: {
        pointFormat: "Avg Accuracy: <b>{point.y}%</b>"
      }
    }, height: "400px", download: true %>
  <% else %>
    <div class="text-center mt-5">
      <%= image_tag "statistics.png", alt: "No data available", class: "img-fluid", style: "max-width: 500px;" %>
      <%# <p class="mt-3 text-muted">Not enough sleep and progress data yet to generate a chart.</p> %>
    </div>
  <% end %>

  <div class="text-center mt-4">
    <%= link_to "â† Back to Performances", performances_path, class: "btn btn-outline-primary" %>
  </div>
</div>
