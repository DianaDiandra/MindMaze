<div class="target-contain">
  <div class="my-page-wrapper">
    <div class="centered-form-wrapper">
      <div class="flex justify-center items-center min-h-screen bg-gradient-to-b from-indigo-100 via-white to-blue-100">
        <div class="form-container text-center w-full px-6 max-w-6xl">

          <header class="bg-white border-b py-6 mb-10 shadow-md rounded-xl">
            <div class="flex justify-center">
              <%= image_tag("game1.svg", alt: "Brain icon", width: 120, height: 120, class: "mx-auto animate-bounce") %>
            </div>
          </header>

          <h2 class="typewriter text-4xl font-bold text-indigo-800 mb-12 tracking-tight">
            🎯 Your Game Performances
          </h2>

          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
            <% @performances.group_by(&:game).each do |game, performances| %>
              <% performances.each do |performance| %>
                <div class="bg-gradient-to-br from-white to-blue-50 hover:shadow-2xl shadow-md transition duration-300 ease-in-out rounded-2xl p-6 text-gray-800 border border-blue-200">
                  <h3 class="text-xl font-bold text-blue-800 mb-2"><%= game.name %></h3>
                  <p class="text-sm text-gray-700 mb-1"><strong>Description:</strong> <%= game.description.truncate(80) %></p>
                  <p class="text-sm text-gray-700 mb-1"><strong>Category:</strong> <%= game.category %></p>
                  <p class="text-sm text-green-600 font-semibold mb-1"><strong>Score:</strong> <%= performance.score %></p>
                  <p class="text-sm text-gray-700 mb-1"><strong>Completed:</strong>
                    <%= performance.completed ? "✅ Yes" : "❌ No" %>
                  </p>
                  <p class="text-sm text-gray-700 mb-1"><strong>Date:</strong> <%= performance.created_at.strftime("%b %d, %Y") %></p>
                  <p class="text-sm text-gray-700"><strong>Time:</strong> <%= performance.created_at.strftime("%I:%M %p") %></p>
                  <%= link_to "🗑️ Delete", target_performance_path(@target, performance), method: :delete,
                        data: { confirm: "Are you sure?" },
                        class: "inline-block mt-4 text-red-600 hover:text-red-800 text-sm underline" %>
                </div>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <img src="https://media.tenor.com/uCi8SyPb7bQAAAAi/brain-hannover.gif" alt="Corner Brain GIF" class="corner-gif">
</div>
