<div class="profile-background">
  <div class="page-wrapper">
    <div class="targets-performances-container">
      <h2 class="typewriter text-2xl font-bold text-gray-800">Your Daily Summary</h2>

      <% if @today_target %>
        <p><strong>Sleep:</strong> <%= @today_target.sleep %> hrs</p>
        <p><strong>Goal:</strong> <%= @today_target.goal %></p>
      <% else %>
        <p>No target set today.</p>
      <% end %>

      <% if @today_performance %>
        <p><strong>Game Played:</strong> <%= @today_performance.game.name %></p>
        <p><strong>Accuracy:</strong> <%= @today_performance.accuracy %>%</p>
        <p><strong>Completed:</strong> <%= @today_performance.completed ? "Yes" : "No" %></p>
      <% else %>
        <p>No game performance recorded today.</p>
      <% end %>

      <h3 class="mt-4 text-xl font-semibold">All Performances</h3>
      <div class="performances-list">
        <% @all_performances.each do |performance| %>
          <div class="performance-card">
            <%= link_to target_performance_path(@target, performance), class: "performance-link" do %>
              <h4><%= performance.game.name %></h4>
              <p>Accuracy: <%= performance.accuracy %>%</p>
              <p>Date: <%= performance.created_at.to_date %></p>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <img src="https://media.tenor.com/uCi8SyPb7bQAAAAi/brain-hannover.gif" alt="Corner Brain GIF" class="corner-gif">
</div>
