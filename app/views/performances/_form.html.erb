<%= simple_form_for([target, performance],
      url: target_performances_path(target),
      method: :post,
      html: { data: { controller: "track-time", track_time_target: "form" } }) do |f| %>

  <%= f.hidden_field :game_id, value: game&.id %>

  <div class="mb-3">
    <%= f.input :description, label: "Game Description", input_html: { class: "form-control"}, placeholder: "My notes..."  %>
  </div>

  <div class="mb-3">
    <%= f.input :final_score, label: "Final Score", input_html: {
      class: "form-control",
      value: 10000,
      readonly: true,
      disabled: true
    } %>
  </div>

  <div class="mb-3">
    <%= f.input :score, label: "Best Score", input_html: { class: "form-control", data: { game_target: "score" } } %>
  </div>

  <div class="mb-3">
    <%= f.input :score, label: "Last Score", input_html: { class: "form-control", data: { game_target: "lastScore" } } %>
  </div>

  <div class="mb-3">
    <%= f.input :accuracy, label: "Progress %", input_html: { class: "form-control", data: { game_target: "percentage" } } %>
  </div>

  <div class="mb-3">
    <%= f.hidden_field :time, id: "time-spent", data: { track_time_target: "timeInput" } %>
  </div>

  <div class="mb-3">
    <%= f.input :completed, as: :boolean, label: "Completed?", input_html: { class: "form-check-input" } %>
  </div>

  <div class="modal-footer">
    <button type="button" class="cancel-button" data-bs-dismiss="modal">Cancel</button>
    <%= f.submit "Save Performance", class: "form-submit-button1" %>
  </div>
<% end %>
